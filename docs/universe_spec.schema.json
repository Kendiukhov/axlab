{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UniverseSpec",
  "type": "object",
  "required": ["logic", "operations", "max_vars", "max_term_size"],
  "properties": {
    "version": {"type": "string"},
    "logic": {"type": "string", "enum": ["equational"]},
    "operations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "arity"],
        "properties": {
          "name": {"type": "string"},
          "arity": {"type": "integer", "enum": [1, 2]},
          "commutative": {"type": "boolean"}
        }
      }
    },
    "max_vars": {"type": "integer", "minimum": 1},
    "max_term_size": {"type": "integer", "minimum": 1}
  }
}
